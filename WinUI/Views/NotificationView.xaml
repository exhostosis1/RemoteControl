<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinUI.Views.NotificationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:n="using:H.NotifyIcon"
    xmlns:converters="using:WinUI.Converters"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Name="BoolToVisibilityConverter"/>
        <converters:ServerTypeToVisibilityConverter x:Name="ServerTypeToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Name="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <n:TaskbarIcon
        x:Name="TrayIcon"
        ToolTipText="Remote Control"
        MenuActivation="RightClick"
        ContextMenuMode="SecondWindow"
        LeftClickCommand="{x:Bind LeftClickCommand}"
        RightClickCommand="{x:Bind InitCommand}"
        >
        <n:TaskbarIcon.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem
                    Text="{x:Bind Model.FirstServerViewModel.Name, Mode=OneWay, FallbackValue=''}"
                    Visibility="{x:Bind Model.FirstServerViewModel, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                    IsEnabled="False"
                    />
                <MenuFlyoutItem
                    Text="{x:Bind Model.FirstServerViewModel.ListeningUri, Mode=OneWay, FallbackValue=''}"
                    Command="{x:Bind CollectionViewModel.OpenSiteCommand}"
                    CommandParameter="{x:Bind Model.FirstServerViewModel.ListeningUri, FallbackValue='', Mode=OneWay}"
                    Visibility="{x:Bind Model.FirstServerViewModel.Type, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource ServerTypeToVisibilityConverter}, ConverterParameter='Web'}"
                    IsEnabled="{x:Bind Model.FirstServerViewModel.Status, FallbackValue=False, Mode=OneWay}"
                />
                <MenuFlyoutItem
                    Text="{x:Bind Model.FirstServerViewModel.Usernames, Mode=OneWay, FallbackValue=''}"
                    Visibility="{x:Bind Model.FirstServerViewModel.Type, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource ServerTypeToVisibilityConverter}, ConverterParameter='Bot'}"
                    IsEnabled="{x:Bind Model.FirstServerViewModel.Status, FallbackValue=False, Mode=OneWay}"
                />
                <MenuFlyoutItem
                    Text="Start"
                    Command="{x:Bind Model.FirstServerViewModel.StartCommand, FallbackValue={x:Null}, Mode=OneWay}"
                    Visibility="{x:Bind Model.FirstServerViewModel.Status, Mode=OneWay, FallbackValue=Collapsed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Inverse'}"
                    />
                <MenuFlyoutItem
                    Text="Stop"
                    Command="{x:Bind Model.FirstServerViewModel.StopCommand, FallbackValue={x:Null}, Mode=OneWay}"
                    Visibility="{x:Bind Model.FirstServerViewModel.Status, Mode=OneWay, FallbackValue=Collapsed, Converter={StaticResource BoolToVisibilityConverter}}"
                />
                <MenuFlyoutSeparator
                    Visibility="{x:Bind Model.FirstServerViewModel, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                <MenuFlyoutItem
                    Text="{x:Bind Model.SecondServerViewModel.Name, Mode=OneWay, FallbackValue=''}"
                    Visibility="{x:Bind Model.SecondServerViewModel, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                    IsEnabled="False"
                    />
                <MenuFlyoutItem
                    Text="{x:Bind Model.SecondServerViewModel.ListeningUri, Mode=OneWay, FallbackValue=''}"
                    Command="{x:Bind CollectionViewModel.OpenSiteCommand}"
                    CommandParameter="{x:Bind Model.SecondServerViewModel.ListeningUri, FallbackValue='', Mode=OneWay}"
                    Visibility="{x:Bind Model.SecondServerViewModel.Type, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource ServerTypeToVisibilityConverter}, ConverterParameter='Web'}"
                    IsEnabled="{x:Bind Model.SecondServerViewModel.Status, FallbackValue=False, Mode=OneWay}"
                />
                <MenuFlyoutItem
                    Text="{x:Bind Model.SecondServerViewModel.Usernames, Mode=OneWay, FallbackValue=''}"
                    Visibility="{x:Bind Model.SecondServerViewModel.Type, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource ServerTypeToVisibilityConverter}, ConverterParameter='Bot'}"
                    IsEnabled="{x:Bind Model.SecondServerViewModel.Status, FallbackValue=False, Mode=OneWay}"
                />
                <MenuFlyoutItem
                    Text="Start"
                    Command="{x:Bind Model.SecondServerViewModel.StartCommand, FallbackValue={x:Null}, Mode=OneWay}"
                    Visibility="{x:Bind Model.SecondServerViewModel.Status, Mode=OneWay, FallbackValue=Collapsed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Inverse'}"
                    />
                    <MenuFlyoutItem
                    Text="Stop"
                    Command="{x:Bind Model.SecondServerViewModel.StopCommand, FallbackValue={x:Null}, Mode=OneWay}"
                    Visibility="{x:Bind Model.SecondServerViewModel.Status, Mode=OneWay, FallbackValue=Collapsed, Converter={StaticResource BoolToVisibilityConverter}}"
                />
                <MenuFlyoutSeparator
                    Visibility="{x:Bind Model.SecondServerViewModel, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                <MenuFlyoutItem
                    Command="{x:Bind CollectionViewModel.StartAllCommand}">
                    Start all
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    Command="{x:Bind CollectionViewModel.StopAllCommand}">
                    Stop all
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <ToggleMenuFlyoutItem 
                    IsChecked="{x:Bind CollectionViewModel.HostAutostart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    >
                    Autostart
                </ToggleMenuFlyoutItem>
                <MenuFlyoutItem
                    Command="{x:Bind CollectionViewModel.AddFirewallRulesCommand}">
                    Add firewall rule
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    Command="{x:Bind CollectionViewModel.AddPermissionsToUserCommand}">
                    Add permissions
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem
                    Command="{x:Bind ExitCommand}">
                    Exit
                </MenuFlyoutItem>
            </MenuFlyout>
        </n:TaskbarIcon.ContextFlyout>
    </n:TaskbarIcon>
</UserControl>
